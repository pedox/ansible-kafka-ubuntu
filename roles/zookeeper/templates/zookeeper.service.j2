[Unit]
Description=Zookeeper
Documentation=http://kafka.apache.org/documentation.html
Requires=network.target
After=network.target

[Service]
User={{ ansible_user }}
Type=simple
SuccessExitStatus=143
ExecStart={{ kafka_main_dir }}/bin/zookeeper-server-start.sh {{ kafka_config_dir }}/zookeeper.properties
ExecStop={{ kafka_main_dir }}/bin/zookeeper-server-stop.sh

[Install]
WantedBy=multi-user.target
Alias=zookeeper.service
